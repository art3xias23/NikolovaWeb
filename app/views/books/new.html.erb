<% if !@book.errors.empty? %>
	<div class="alert alert-error">
		<ul>
			<% @book.errors.full_messages.each do |msg| %>
			<li><%= msg%></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="well">
	<%= form_for @book, html: {multipart: true} do |f| %>
		<%= f.label :name, 'Име' %>
		<%= f.text_field :name %>

		<%= f.label :author, 'Автор' %>
		<%= f.text_field :author %>

		<%= f.label :attachment, 'Книга' %>
		<%= f.file_field :attachment, accept: 'pdf/doc/html/docx/mobi/epub' %>

		<%= f.label :image, 'Снимка' %>
		<%= f.file_field :image, accept: 'jpg/jpeg/gif/png' %>
		<%= f.submit "Save", class: "btn btn-primary" %>
	<% end %>
</div>