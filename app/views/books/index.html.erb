

<br />

<%= link_to "Нова Книга", new_book_path, class: "btn btn-primary mb1 bg-blue", confirm: "you sure" %>
<br />
<br />
<table class="table table-boarded table-striped">
	<thread>
		<tr>
			<th>Име</th>
			<th>Aвтор</th>
			<th>Корица</th>
			<th>Линк за сваляне</th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
		</tr>
	</thread>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
			<%= link_to(book_path(book)) do%>
				<strong><%= book.name %></strong>
			<% end %>
			</td>

			<td><%= book.author %></td>

			<td><%=  image_tag book.image_url(:thumb).to_s%></td>

			<%if book.attachment.blank?%>
			<td>&nbsp;</td>
			<%else%>
			<td><%= button_to "Свали Книга", book.attachment_url, class: "btn-group-lg" %></td>
			<%end%>

			<td><%= button_to "Изтрий", book, method: :delete, class: "btn btn-danger", confirm: "Сигурни ли сте, че желаете да изтриете #{book.name}?" %></td>

			<td><%= link_to "Промени", edit_book_path(book), class: "btn btn-warning" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
