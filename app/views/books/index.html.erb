<% if !flash[:notice].blank? %>
	<div class="alert alert-info">
		<%= flash[:notice] %>
	</div>
<%end%>

<br />

<%= link_to "Нова Книга", new_book_path, class: "btn btn-primary mb1 bg-blue" %>
<br />
<br />

	
	
		<% @books.each do |book| %>
		
			<%= book.name %>

			<%= book.author %>
			
			<%=  image_tag book.image_url.to_s%>
			<%if book.attachment.blank?%>
			
			<%else%>
			<%= link_to "Свали Книга", book.attachment_url %>
			<%end%>
			<%= button_to "Изтрий", book, method: :delete, class: "btn btn-danger", confirm: "Сигурни ли сте, че желаете да изтриете #{book.name}?" %>
			<%= link_to "Промени", edit_book_path(book), class: "btn btn-warning" %>
		
		<% end %>
